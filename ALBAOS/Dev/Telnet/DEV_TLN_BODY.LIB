/*************************************************************
 * TELNET HANDLER
 *************************************************************/
/* states */
#define STATE_INIT	0
#define STATE_STEADY	1

typedef struct {
	tcp_Socket sock;
	tcp_Socket *s;

	int lport;
	int state;

//	char buf[MAX_BUFLEN+1];
//	char cmdbuf[10];
} telnet_recv;

static telnet_recv tr_state;
static telnet_recv * const state = &tr_state;
